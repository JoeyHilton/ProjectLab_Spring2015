<div class = 'container'>
	<h2>Projects</h2>
	<%=  link_to "Create New Project", new_project_path%>
	<table class = 'table table-hover'>
		<thead>
	    <tr>
	    	<th>Name</th>
	    	<th>Description</th>
	      <th>Due Date</th>
	      <th>Time left</th>
	      <th></th>
	    </tr>
	  </thead>
	  <tbody>
		  <% @projects.each do |project| %>
			  <tr>
				  <td><%= project.name %></td>
				  <td><%= project.description %></td>
				  <td><%= project.due_date.strftime("%B %d, %Y") %></td>
				  <td>
			  		 <% if project.due_date.present? && project.due_date < Time.now %>
          			<p class="due">PAST DUE!</p>
      			 <% else %>
          			<p><%= distance_of_time_in_words_to_now(project.due_date) %></p>
      			 <% end %>
				  <td>
				  	<div class="btn-group btn-group-xs">
							<%= link_to 'View', project_path(project), class: "btn" %>
							<%= link_to 'Edit', edit_project_path(project), class: "btn" %>
							<%= link_to 'Delete', project, data: { confirm: "Are you sure you wish to delete this project?" }, 
																						 method: :delete, class: "btn" %>
						</div>
					</td>
				</tr>
			<% end %>
	  </tbody>
	</table>
</div>
