<div class = 'container'>
	<h2>Project: <%= @project.name  %></h2>
	<p>Description: <%= @project.description %></p>
	<p>Due Date: <%= @project.due_date.strftime("%B %d, %Y") %></p>

  <h2>
  <i class="fa fa-check-circle-o"></i>Tasks: 
  <%= link_to fa_icon("plus-circle", text: "Add Task"), new_project_task_path(@project), class: "btn btn-primary" %>
  </h2>

  <table class = 'table table-hover'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Due Date</th>
          <th>Time left</th>
          <th>Priority</th>
          <th>Complete?</th>
        </tr>
      </thead>
      <tbody>
        <% @project.tasks.each do |task| %>
          <tr>
            <td><%= task.name %></td>
            <td><%= task.description %></td>
            <td><%= task.due_date.strftime("%B %d, %Y, %I:%M %P") %></td>
            <td>
              <% if task.due_date.present? && task.due_date < Time.now %>
                <p>PAST DUE!</p>
              <% else %>
                <p><%= distance_of_time_in_words_to_now(task.due_date) %></p>
              <% end %>
            </td>
            <td><%= task.priority %>
            </td>
            <td><%= task.complete ? "Yes" : "Nope" %></td>
            <td>
              <div class="btn-group btn-group-xs">
                <%= link_to 'Edit', edit_project_task_path(@project, task), class: "btn" %>
                <%= link_to 'Delete', project_task_path(@project, task), data: { confirm: "Are you sure?" }, 
                                                                         method: :delete, class: "btn" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

</div>

