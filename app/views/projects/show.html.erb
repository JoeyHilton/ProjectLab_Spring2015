<div class = 'container'>
	<h2>Project: <%= @project.name  %></h2>
	<p>Description: <%= @project.description %></p>
	<p>Due Date: <%= @project.due_date.strftime("%B %d, %Y") %></p>

  <h2>
  Tasks: 
  <%= link_to "Add Task", new_project_task_path(@project), class: "btn btn-primary" %>
  </h2>

  <table class = 'table table-hover'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Due Date</th>
          <th>Time left</th>
          <th>Priority</th>
          <th>Complete?</th>
        </tr>
      </thead>
      <tbody>
        <% @project.tasks.each do |task| %>
          <tr>
            <td><%= task.name %></td>
            <td><%= task.description %></td>
            <td><%= task.due_date.strftime("%B %d, %Y") %></td>
            <td><%= distance_of_time_in_words_to_now(task.due_date) %></td>
            <td><% if task.priority == 1  %> 
                Immediate
                <% elsif task.priority ==2 %>
                High
                <% elsif task.priority ==3 %>
                Medium
                <% elsif task.priority ==4 %>
                Low
                <% else %>
                Whenever
                <% end %>
            </td>
            <td><%= task.complete ? "Yes" : "Nope" %></td>
            <td>
              <div class="btn-group btn-group-xs">
                <%= link_to 'Edit', edit_project_task_path(@project, task), class: "btn" %>
                <%= link_to 'Delete', project_task_path(@project, task), data: { confirm: "Are you sure?" }, 
                                               method: :delete, class: "btn" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

</div>

